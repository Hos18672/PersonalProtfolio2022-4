    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet' href='style.css')
    title Reza Hossaini
  body
    main
      header.header-container
        nav#h-container.h-container
          #hamburger-icon.hamburger-icon
            #bar1.bar1
            #bar2.bar2
            #bar3.bar3
            ul#nav-list-container1.nav-list
              li.nav-item
                a.nav-a-item(href='#landing-page1') About
              li.nav-item
                a.nav-a-item1(href='#projects-container1') Projects
              li.nav-item
                a.nav-a-item2(href='#works-container1') Works
              li.nav-item
                a.nav-a-item3(href='#edu-container1') Educations
              li.nav-item
                a.nav-a-item4(href='#skills-container1') Skills
              li.nav-item
                a.nav-a-item4(href='#contact-container1') Contact
          a.logo-container(href='#landing-page1')
            span.reza R
            span.hossaini H
          ul#nav-list-container.nav-list
            li.nav-item.landing(data-text='About')
              a.nav-a-item.landing-page1(href='#landing-page1') About
            li.nav-item.project(data-text='Projects')
              a.nav-a-item1.projects-container1(href='#projects-container1') Projects
            li.nav-item.work(data-text='Works')
              a.nav-a-item2.works-container1(href='#works-container1') Works
            li.nav-item.edu(data-text='Educations')
              a.nav-a-item3.edu-container1(href='#edu-container1') Educations
            li.nav-item.skill(data-text='Skills')
              a.nav-a-item4.skills-container1(href='#skills-container1') Skills
            li.nav-item.contact(data-text='Contact')
              a.nav-a-item4.contact-container1(href='#contact-container1') Contact
          .switch
            input#switch(type='checkbox')
            label(for='switch') Toggle
      .socials
        a.items.one(href='https://www.linkedin.com/in/reza-hossaini-bb5ab614b/')
          i.fa-brands.fa-linkedin-in.icon-likedin
        a.items.two(href='https://www.xing.com/profile/reza_hosseini15/cv')
          i.fa-brands.fa-xing.icon-xing
        a.items.three(href='https://www.facebook.com/profile.php?id=100008372049580')
          i.fa-brands.fa-facebook-f.icon-facebook
      .dots
        a.dot.dot-active.landing-page1(href='#landing-page1')
        a.dot.projects-container1(href='#projects-container1')
        a.dot.works-container1(href='#works-container1')
        a.dot.edu-container1(href='#edu-container1')
        a.dot.skills-container1(href='#skills-container1')
        a.dot.contact-container1(href='#contact-container1')
      //- Landing page
      section#landing-page1.landing-page.container
        .name-container
          .name-container
            div R
            div E
            div Z
            div A&nbsp;
            div H
            div O
            div S
            div S
            div A
            div I
            div N
            div I
        img(src='./src/images/foto1.png' alt='my Profile Photo')
        a(href='#about-container1')
          svg#arrow-down.arrow-down(data-name='Layer 1' xmlns='http://www.w3.org/2000/svg' viewbox='0 0 411.12 222.15')
            rect.cls-1(x='213.86' y='251.02' width='32' height='298.95' rx='16' transform='translate(-334.84 -9.39) rotate(-45)')
            rect.cls-1(x='403.22' y='250.62' width='32' height='298.95' rx='16' transform='translate(286.72 -468.46) rotate(45)')
      //- About
      section#about-container1.about-container.container
        .about-main-container
          img.about-foto(src='./src/images/foto2.png' alt='my Profile Photo')
          .text-container
            #about-span.about-span
            article.main-container
              h1.container-title.landing-title About me
              p.about-description
      //- Projects
      section#projects-container1.projects-container.container
        div
          h1.container-title.projects-title Projects
        article
          div
            ul#projects-list.projects-list
      //- works
      section#works-container1.works-container.container
        h1.container-title.works-title works
        article.works-items
      //- Educations
      section#edu-container1.educations-container.container
        h1.container-title.edu-title Educations
        article.education-items
      //- Skills
      section#skills-container1.skills-container.container
        h1 Skills
        article.skills
      //- Contact
      section#contact-container1.contact-container.container
        .container
          .screen
            .screen-body
              .screen-body-item.left
                .app-title
                  div CONTACT
                  div ME
                .app-contact
                  | CONTACT INFO
                  .telefon
                    i.fa-solid.fa-phone
                  .email
                    i.fa-solid.fa-envelope
              .screen-body-item.right
                form#my-form.app-form(action='#' method='POST')
                  .app-from-container
                    .app-form-group
                      input.app-form-control.name(placeholder='Enter your name' type='text' value='' required='')
                    .app-form-group
                      input#email.app-form-control.email(name='email' type='email' placeholder='Enter your E-Mail' required='')
                    .app-form-group.message
                      textarea#message.app-form-control(name='message' placeholder='Write your message')
                    #status
                    .app-form-group.buttons
                      button.app-form-button(type='submit') SEND
      footer
        .line-one
        p.text Created by Reza Hossaini &copy;
        .line-two
        .imda
          #impressum.impressum Impressum
          #datenschutz.datenschutz Privacy policy
      #impressumBox.impressumBox
        span#closeIm &times;
        article.impressum-content
          h1 Impressum
          h2 Contact details
          p You can reach me Monday to Friday from 9:00 to 18:00.
          p Tel: 06704099219
          p E-mail: hossaini@gmail.com
          p www.rezahossaini.de
          h2 Address
          p Haberergasse 1 Wien 1220
          p Programming: Reza Hossaini
      #datenschutzBox.datenschutzBox
        span#closeDa &times;
        article.datenschutz-content
